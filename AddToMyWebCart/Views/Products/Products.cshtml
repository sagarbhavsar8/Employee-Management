
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container-fluid">
    <div class="row col-lg-12">
        <span class="h4">Products</span>
        <a href="javascript:void(0);" onclick="AddProduct()" class="btn btn-primary ml-2"> Add Product <img src="~/Images/icon.png" height="20" width="20" /></a>
    </div>

    <div class="mt-2 row border-bottom col-lg-12"></div>

    <div class="text-center" style="display:block">
        <a href="#"> </a>
    </div>

    <div class="row col-lg-12">
        <table class="table table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Product Image</th>
                    <th scope="col">ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Created By</th>
                    <th scope="col">Created Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry the Bird</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="modal fade" id="addProduct" tabindex="-1" role="dialog" aria-labelledby="AddProduct" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="AddProductDivLoad">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="InsertReminder()">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    AddProduct = function () {
        $("#AddProductDivLoad").load("/products/addproducts", function () {
            $("#addProduct").modal("show");
        })
    }

</script>