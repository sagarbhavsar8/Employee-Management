@model AddToMyCart.ViewModels.CalendarViewModel


<script src="~/Scripts/datepicker/bootstrap-datepicker.js"></script>
<link href="~/Content/datepicker/bootstrap-datepicker.css" rel="stylesheet" />
<script type="text/javascript">
    $('#datepicker').datepicker();
</script>

<form name="AddRemainder" id="AddRemainder">
    
    @if(Session["CurrentUserID"] != null)
    {
        @Html.Hidden("UserID", Session["CurrentUserID"])
    }
    <div class="col-sm-6">
        <div class="row">
            <div class="form-group">
                <label for="CalendarText">Reminder: </label>
                <input type="text" name="CalendarText" id="CalendarText" value="@Model.CalendarText" class="form-control" />
            </div>
            <div class="form-group">
                <label for="CalendarDateTime">Remainder Date: </label>
                <input type="text" class="form-control CalendarDateTime" id="datepicker" name="CalendarDateTime" placeholder="MM/DD/YYYY" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="PriorityID">Remainder Priority: </label>
                <select name="PriorityID" class="form-control" id="PriorityID">
                    <option value="-1">Select Priority</option>
                    @foreach (var item in ViewBag.priorities)
                    {
                        <option value="@item.PriorityID">@item.PriorityName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</form>
